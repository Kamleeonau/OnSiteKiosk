<ContentDialog
    x:Class="OnSite_Kiosk.UI.Staff.Staff_SignOutOther"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OnSite_Kiosk.UI.Staff"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Please enter your reason"
    PrimaryButtonText="Ok"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick" IsPrimaryButtonEnabled="False"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick" Loaded="ContentDialog_Loaded">

    <Grid>
        <TextBox x:Name="txt_reason" HorizontalAlignment="Stretch" VerticalAlignment="Center"   BorderBrush="Black" BorderThickness="1" TextChanged="txt_reason_TextChanged"/>
    </Grid>
</ContentDialog>
