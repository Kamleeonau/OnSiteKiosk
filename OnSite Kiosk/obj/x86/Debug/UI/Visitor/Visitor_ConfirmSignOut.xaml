<Page x:ConnectionId='1'
    x:Class="OnSite_Kiosk.UI.Visitor.Visitor_ConfirmSignOut"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OnSite_Kiosk.UI.Visitor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"                     
    >
    <RelativePanel>

        <StackPanel RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Margin="0,0,0,120">

            <FontIcon Glyph="&#xE77B;" FontSize="120" FontFamily="{StaticResource SymbolThemeFontFamily}"/>
            <TextBlock x:ConnectionId='3' FontSize="20" x:Name="lbl_name" HorizontalAlignment="Center" Margin="0,0,0,8" DataContext="this"  Text="DisplayName"></TextBlock>
            <TextBlock HorizontalAlignment="Center">Touch below to complete sign out</TextBlock>
        </StackPanel>
        <Button x:ConnectionId='2' CornerRadius="10" Height="100" Width="320" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignHorizontalCenterWithPanel="True" IsTabStop="False"                     >Sign Out</Button>
    </RelativePanel>
</Page>

